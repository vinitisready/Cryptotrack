# Environment Configuration
NODE_ENV=development

# API Configuration
REACT_APP_API_BASE_URL=https://api.coingecko.com/api/v3
REACT_APP_API_TIMEOUT=10000
REACT_APP_CACHE_DURATION=300000

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_DARK_MODE=true

# Security
REACT_APP_CSP_ENABLED=true
REACT_APP_RATE_LIMIT_REQUESTS=30
REACT_APP_RATE_LIMIT_WINDOW=60000

# Performance
REACT_APP_LAZY_LOADING=true
REACT_APP_IMAGE_OPTIMIZATION=true
REACT_APP_BUNDLE_ANALYZER=false

# Monitoring (Production only)
REACT_APP_SENTRY_DSN=
REACT_APP_GOOGLE_ANALYTICS_ID=

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef

# Google OAuth
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id